/ {
    combos {
        compatible = "zmk,combos";
      
        combo_left_click {
            bindings = <&mkp LCLK>;
            key-positions = <27 28>;
        };
        
        combo_middle_click {
            bindings = <&mkp MCLK>;
            key-positions = <26 27>;
        };

        combo_right_click {
            bindings = <&mkp RCLK>;
            key-positions = <25 26>;
        };

        combo_delete {
            bindings = <&kp BSPC>;
            key-positions = <15 16>;
        };

        combo_esc {
            bindings = <&kp ESC>;
            key-positions = <19 20>;
        };

        combo_sleep {
            bindings = <&kp C_SLEEP>;
            key-positions = <17 18>;
        };

        combo_power_off {
            bindings = <&kp C_POWER>;
            key-positions = <5 6>;
        };
    };
};
